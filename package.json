{
  "name": "eliq-promise",
  "version": "3.1.3",
  "description": "A Node.js module to interface with the ELIQ API",
  "scripts": {
    "build": "tsc",
    "eslint": "eslint **/*.ts",
    "eslint:fix": "eslint **/*.ts --fix",
    "test": "npm audit && npm run eslint && jest --detectOpenHandles --coverage",
    "prettier": "prettier --write '{*/**/*,*}.{js,md,json,d.ts}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,md,json,d.ts}": [
      "npm run prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashpool/eliq-promise.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "@ashpool:registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "eliq",
    "promises"
  ],
  "author": "Magnus Ljadas <magnus.ljadas@gmail.com> (https://github.com/ashpool)",
  "contributors": [
    {
      "name": "Magnus Ljadas <magnus.ljadas@gmail.com> (https://github.com/ashpool)"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashpool/eliq-promise/issues"
  },
  "homepage": "https://github.com/ashpool/eliq-promise",
  "engines": {
    "node": ">=8"
  },
  "main": "./build/index.js",
  "files": [
    "build"
  ],
  "dependencies": {
    "got": "^11.8.2",
    "lodash": "^4.17.21",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/got": "^9.6.12",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/request": "^2.48.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.3",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "nock": "^13.1.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/tests/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "node"
  }
}
